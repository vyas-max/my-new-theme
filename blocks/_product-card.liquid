{% liquid
  assign product = closest.product
  assign aspect_ratio = section.settings.aspect_ratio | default: block.settings.aspect_ratio | default: '125' | append: '%'
  assign card_radius = section.settings.card_radius | default: block.settings.card_radius | default: 16
  assign gradient_opacity = section.settings.gradient_opacity | default: block.settings.gradient_opacity | default: 60 | divided_by: 100.0
  assign heading_size = section.settings.title_size | default: block.settings.title_size | default: 18
  assign price_size = section.settings.price_size | default: block.settings.price_size | default: 14
%}

{% capture children %}
  {% content_for 'blocks', closest.product: product %}
{% endcapture %}

<div class="px-product-card section-{{ block.id }} color-{{ block.settings.color_scheme }}"
     style="--aspect-ratio: {{ aspect_ratio }};
            --card-radius: {{ card_radius }}px;
            --gradient-opacity: {{ gradient_opacity }};
            --title-size: {{ heading_size }}px;
            --price-size: {{ price_size }}px;">
  
  <a href="{{ product.url | default: '#' }}" class="px-product-card__link">
    <div class="px-product-card__image-wrapper">
      {% if product.featured_image != blank %}
        {{ product.featured_image | image_url: width: 800 | image_tag:
          loading: 'lazy',
          class: 'px-product-card__image',
          widths: '200, 400, 600, 800'
        }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg px-product-card__image' }}
      {% endif %}
      
      <div class="px-product-card__overlay">
        <div class="px-product-card__content">
          {{ children }}
        </div>
      </div>
    </div>
  </a>
</div>

<style>
  .px-product-card {
    position: relative;
    width: 100%;
    margin-bottom: 2rem;
  }

  .px-product-card__link {
    display: block;
    text-decoration: none;
    border-radius: var(--card-radius);
    overflow: hidden;
    background-color: #f0f0f0;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .px-product-card__link:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  .px-product-card__image-wrapper {
    position: relative;
    padding-bottom: var(--aspect-ratio);
  }

  .px-product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .px-product-card__link:hover .px-product-card__image {
    transform: scale(1.08);
  }

  .px-product-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, var(--gradient-opacity)) 0%, rgba(0, 0, 0, 0) 45%);
    display: flex;
    align-items: flex-end;
    padding: 1.2rem;
  }

  .px-product-card__content {
    color: #ffffff;
    text-align: left;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  /* Target typical sub-blocks inside the overlay */
  .px-product-card__content div, 
  .px-product-card__content h3, 
  .px-product-card__content span {
    color: #ffffff !important;
    margin: 0 !important;
  }

  .px-product-card__content .product-title {
    font-size: var(--title-size) !important;
    font-weight: 700 !important;
    line-height: 1.1 !important;
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
  }

  .px-product-card__content .price {
    font-size: var(--price-size) !important;
    font-weight: 600 !important;
    opacity: 0.9;
  }
</style>

{% schema %}
{
  "name": "t:names.product_card",
  "blocks": [
    { "type": "_product-card-group" },
    { "type": "text" },
    { "type": "image" },
    { "type": "buy-buttons" },
    { "type": "price" },
    { "type": "review" },
    { "type": "sku" },
    { "type": "swatches" },
    { "type": "_product-card-gallery" },
    { "type": "product-title" },
    { "type": "custom-liquid" },
    { "type": "@app" }
  ],
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Studio Card Settings"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Card Aspect Ratio",
      "options": [
        { "value": "100", "label": "Square (1:1)" },
        { "value": "125", "label": "Portrait (4:5)" },
        { "value": "133", "label": "Portrait (3:4)" },
        { "value": "150", "label": "Classic Portrait (2:3)" }
      ],
      "default": "125"
    },
    {
      "type": "range",
      "id": "card_radius",
      "label": "Card Border Radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "gradient_opacity",
      "label": "Gradient Intensity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 60
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Product Title Size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "price_size",
      "label": "Product Price Size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "header",
      "content": "Color Scheme"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    }
  ]
}
{% endschema %}
