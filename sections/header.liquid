{% comment %}
  Multi-row Header Section
  - Top Row: Logo/Branding, Search, Icons
  - Bottom Row: Navigation
{% endcomment %}

{% liquid
  assign menu = section.settings.menu
  assign sticky = section.settings.sticky
  assign logo = section.settings.logo
  assign logo_width = section.settings.logo_width
  assign logo_width_mobile = section.settings.logo_width_mobile
  assign color_scheme = section.settings.color_scheme
  assign show_account = section.settings.show_account
  assign show_search = section.settings.show_search
  assign search_placeholder = section.settings.search_placeholder
  assign box_text = section.settings.brand_box_text
  assign heading_text = section.settings.brand_heading_text
  
  assign header_padding_top = section.settings.padding_top
  assign header_padding_bottom = section.settings.padding_bottom
  assign nav_font_size = section.settings.nav_font_size
  assign nav_font_weight = section.settings.nav_font_weight
  assign nav_gap = section.settings.nav_gap
  
  assign brand_box_bg = section.settings.brand_box_bg
  assign brand_box_color = section.settings.brand_box_color
  assign border_color = section.settings.border_color
%}

<style>
  .header-wrapper {
    display: block;
    position: relative;
    background-color: var(--color-background);
    z-index: 10;
    font-family: var(--font-body-family);
  }

  .header-wrapper--sticky {
    position: sticky;
    top: 0;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }

  .header-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Top Row */
  .header__top-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding-top: {{ header_padding_top }}px;
    padding-bottom: {{ header_padding_bottom }}px;
    border-bottom: 1px solid {{ border_color }};
  }

  /* Search Bar */
  .header__search {
    justify-self: center;
    width: 100%;
    max-width: 400px;
    {% unless show_search %}display: none;{% endunless %}
  }

  .header__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .header__search-input {
    width: 100%;
    padding: 0.6rem 1rem 0.6rem 2.5rem;
    border: 1px solid {{ border_color | default: '#333' }};
    border-radius: 50px;
    font-size: 0.9rem;
    background: transparent;
    outline: none;
  }

  .header__search-icon {
    position: absolute;
    left: 1rem;
    width: 16px;
    height: 16px;
    color: #666;
  }

  /* Logo */
  .header__logo {
    justify-self: start;
  }

  .header__logo-link {
    text-decoration: none;
    color: var(--color-foreground-heading);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header__logo-image {
    display: block;
    max-width: 100%;
    height: auto;
    width: {{ logo_width }}px;
  }

  .header__logo-text {
    font-size: 2.2rem;
    font-weight: 400;
    letter-spacing: -0.5px;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .header__logo-box {
    border: 1px solid #000;
    padding: 0 4px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ brand_box_bg }};
    color: {{ brand_box_color }};
  }

  /* Icons */
  .header__icons {
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header__icon-link {
    text-decoration: none;
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
  }

  .header__icon-link:hover {
    opacity: 0.7;
  }

  .header__icon-svg {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }

  /* Bottom Row Navigation */
  .header__bottom-row {
    padding: 1rem 0;
  }

  .header__nav {
    display: flex;
    justify-content: center;
  }

  .header__menu-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: {{ nav_gap }}px;
  }

  .header__menu-item {
    position: relative;
  }

  .header__menu-link {
    text-decoration: none;
    color: var(--color-foreground);
    font-size: {{ nav_font_size }}px;
    font-weight: {{ nav_font_weight }};
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .header__menu-link:hover {
    color: var(--color-primary);
  }

  /* Sale Badge */
  .header__sale-badge {
    position: absolute;
    top: -12px;
    right: -20px;
    background: #d02e2e;
    color: #fff;
    font-size: 0.6rem;
    font-weight: bold;
    padding: 1px 4px;
    border-radius: 2px;
    text-transform: uppercase;
    transform: rotate(5deg);
    line-height: 1;
  }

  /* Mobile Toggle */
  .header__mobile-toggle {
    display: none;
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    color: var(--color-foreground);
    width: 44px;
    height: 44px;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
  }

  .header__mobile-toggle:hover {
    background-color: rgba(var(--color-foreground-rgb), 0.05);
  }

  .header__nav-mobile {
    display: none;
  }

  /* Responsive Styles */
  @media screen and (max-width: 990px) {
    .header-container {
      padding: 0 1rem;
    }

    .header__top-row {
      grid-template-columns: auto 1fr auto;
      padding: 0.8rem 0;
    }

    .header__logo-image {
      width: {{ logo_width_mobile }}px;
    }

    .header__search {
      display: none; /* Hide on mobile top row, move to drawer */
    }

    .header__mobile-toggle {
      display: flex;
      margin-right: 0.5rem;
      grid-column: 1;
    }

    .header__logo {
      grid-column: 2;
      justify-self: center;
    }

    .header__icons {
      grid-column: 3;
    }

    .header__bottom-row {
      display: none;
    }

    .header__nav-mobile {
      position: fixed;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100vh;
      background: var(--color-background);
      z-index: 100;
      transition: left 0.3s ease;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .header__nav-mobile--open {
      left: 0;
    }

    .header__nav-mobile-close {
      align-self: flex-end;
      background: none;
      border: none;
      cursor: pointer;
    }

    .header__menu-list-mobile {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      list-style: none;
      padding: 0;
    }
  }
</style>

<div class="header-wrapper color-{{ color_scheme }}{% if sticky %} header-wrapper--sticky{% endif %}">
  <div class="header-container">
    
    <!-- Top Row -->
    <div class="header__top-row">
      
      <!-- Mobile Toggle -->
      <button type="button" class="header__mobile-toggle" aria-label="Menu" id="mobile-menu-toggle">
        <span class="svg-wrapper" style="width: 32px; height: 32px;">
          {{ 'icon-menu.svg' | inline_asset_content }}
        </span>
      </button>

      <!-- Logo (Left on Desktop, Center on Mobile) -->
      <div class="header__logo">
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {%- if logo != blank -%}
            {{ logo | image_url: width: 600 | image_tag:
              class: 'header__logo-image',
              widths: '50, 100, 150, 200, 250, 300, 400, 500',
              alt: shop.name
            }}
          {%- else -%}
            <div class="header__logo-text">
                <div class="header__logo-box">{{ box_text }}</div>
                <span>{{ heading_text }}</span>
            </div>
          {%- endif -%}
        </a>
      </div>

      <!-- Search (Desktop Center) -->
      {% if show_search %}
        <div class="header__search">
          <form action="{{ routes.search_url }}" method="get" class="header__search-form">
            <span class="header__search-icon">
              {{ 'icon-search.svg' | inline_asset_content }}
            </span>
            <input type="text" name="q" placeholder="{{ search_placeholder }}" class="header__search-input" aria-label="{{ search_placeholder }}">
          </form>
        </div>
      {% endif %}

      <!-- Icons -->
      <div class="header__icons">
        {%- if shop.customer_accounts_enabled and show_account -%}
          <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="header__icon-link" aria-label="Account">
            <span class="header__icon-svg">
              {{ 'icon-account.svg' | inline_asset_content }}
            </span>
          </a>
        {%- endif -%}
        <a href="{{ routes.cart_url }}" class="header__icon-link" aria-label="Cart">
          <span class="header__icon-svg">
            {{ 'icon-cart.svg' | inline_asset_content }}
          </span>
        </a>
      </div>

    </div>

    <!-- Bottom Row (Desktop Navigation) -->
    <div class="header__bottom-row">
      <nav class="header__nav">
        <ul class="header__menu-list">
          {%- for link in linklists[menu].links -%}
            <li class="header__menu-item">
              <a href="{{ link.url }}" class="header__menu-link">
                {{ link.title | escape }}
                {%- if link.links.size > 0 -%}
                  <span style="width: 10px; height: 10px;">{{ 'icon-caret.svg' | inline_asset_content }}</span>
                {%- endif -%}
              </a>
              {%- if link.title contains 'Sale' or link.title contains 'sale' -%}
                <span class="header__sale-badge">Sale</span>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    </div>

  </div>
</div>

<!-- Mobile Navigation Drawer -->
<div class="header__nav-mobile" id="mobile-nav-drawer">
  <button type="button" class="header__nav-mobile-close" id="mobile-menu-close" aria-label="Close menu">
    <span class="svg-wrapper" style="width: 24px; height: 24px;">{{ 'icon-close.svg' | inline_asset_content }}</span>
  </button>
  
  {% if show_search %}
    <form action="{{ routes.search_url }}" method="get" class="header__search-form" style="margin-bottom: 2rem;">
      <input type="text" name="q" placeholder="{{ search_placeholder }}" class="header__search-input" style="border: 1px solid {{ border_color | default: 'var(--color-border)' }};">
    </form>
  {% endif %}

  <ul class="header__menu-list-mobile">
    {%- for link in linklists[menu].links -%}
      <li>
        <a href="{{ link.url }}" class="header__menu-link" style="font-size: 1.2rem; padding: 0.5rem 0;">
          {{ link.title | escape }}
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const close = document.getElementById('mobile-menu-close');
    const drawer = document.getElementById('mobile-nav-drawer');

    if (toggle && drawer) {
      toggle.addEventListener('click', () => drawer.classList.add('header__nav-mobile--open'));
      close.addEventListener('click', () => drawer.classList.remove('header__nav-mobile--open'));
      
      // Close on escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') drawer.classList.remove('header__nav-mobile--open');
      });
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "section-header",
  "settings": [
    {
      "type": "header",
      "content": "Branding"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "brand_box_text",
      "label": "Logo Box Text",
      "default": "fx"
    },
    {
      "type": "text",
      "id": "brand_heading_text",
      "label": "Logo Heading Text",
      "default": "studio"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 400,
      "step": 10,
      "default": 120,
      "unit": "px",
      "label": "Desktop logo width"
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "min": 50,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px",
      "label": "Mobile logo width"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 2000,
      "step": 50,
      "default": 1400,
      "unit": "px",
      "label": "Page max width"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 24,
      "unit": "px",
      "label": "Top padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 24,
      "unit": "px",
      "label": "Bottom padding"
    },
    {
      "type": "checkbox",
      "id": "sticky",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "range",
      "id": "nav_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px",
      "label": "Font size"
    },
    {
      "type": "select",
      "id": "nav_font_weight",
      "label": "Font weight",
      "options": [
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "500"
    },
    {
      "type": "range",
      "id": "nav_gap",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px",
      "label": "Item gap"
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search bar",
      "default": true
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search placeholder",
      "default": "Search"
    },
    {
      "type": "header",
      "content": "Icons"
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show account icon",
      "default": true
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 40,
      "step": 2,
      "default": 24,
      "unit": "px",
      "label": "Icon size"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "brand_box_bg",
      "label": "Logo Box Background",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "brand_box_color",
      "label": "Logo Box Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#eeeeee"
    }
  ]
}
{% endschema %}
