{% comment %}
  Multi-row Header Section
  - Top Row: Search (Left), Logo (Center), Icons (Right)
  - Bottom Row: Navigation (Center)
{% endcomment %}

{% liquid
  assign menu = section.settings.menu
  assign sticky = section.settings.sticky
  assign logo = settings.logo
  assign logo_width = section.settings.logo_width
  assign color_scheme = section.settings.color_scheme
  assign show_account = section.settings.show_account
%}

<style>
  .header-wrapper {
    display: block;
    position: relative;
    background-color: var(--color-background);
    z-index: 10;
    font-family: var(--font-body-family);
  }

  .header-wrapper--sticky {
    position: sticky;
    top: 0;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  }

  .header-container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Top Row */
  .header__top-row {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  /* Search Bar */
  .header__search {
    justify-self: center;
    width: 100%;
    max-width: 400px;
  }

  .header__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .header__search-input {
    width: 100%;
    padding: 0.6rem 1rem 0.6rem 2.5rem;
    border: 1px solid #333;
    border-radius: 50px;
    font-size: 0.9rem;
    background: transparent;
    outline: none;
  }

  .header__search-icon {
    position: absolute;
    left: 1rem;
    width: 16px;
    height: 16px;
    color: #666;
  }

  /* Logo */
  .header__logo {
    justify-self: start;
  }

  .header__logo-link {
    text-decoration: none;
    color: var(--color-foreground-heading);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header__logo-image {
    display: block;
    max-width: 100%;
    height: auto;
  }

  .header__logo-text {
    font-size: 2.2rem;
    font-weight: 400;
    letter-spacing: -0.5px;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .header__logo-box {
    border: 1px solid #000;
    padding: 0 4px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Icons */
  .header__icons {
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header__icon-link {
    text-decoration: none;
    color: var(--color-foreground);
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
  }

  .header__icon-link:hover {
    opacity: 0.7;
  }

  .header__icon-svg {
    width: 24px;
    height: 24px;
  }

  /* Bottom Row Navigation */
  .header__bottom-row {
    padding: 1rem 0;
  }

  .header__nav {
    display: flex;
    justify-content: center;
  }

  .header__menu-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2.5rem;
  }

  .header__menu-item {
    position: relative;
  }

  .header__menu-link {
    text-decoration: none;
    color: var(--color-foreground);
    font-size: 1rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .header__menu-link:hover {
    color: var(--color-primary);
  }

  /* Sale Badge */
  .header__sale-badge {
    position: absolute;
    top: -12px;
    right: -20px;
    background: #d02e2e;
    color: #fff;
    font-size: 0.6rem;
    font-weight: bold;
    padding: 1px 4px;
    border-radius: 2px;
    text-transform: uppercase;
    transform: rotate(5deg);
    line-height: 1;
  }

  /* Mobile Toggle */
  .header__mobile-toggle {
    display: none;
    background: none;
    border: none;
    padding: 10px;
    cursor: pointer;
    color: var(--color-foreground);
    width: 44px;
    height: 44px;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
  }

  .header__mobile-toggle:hover {
    background-color: rgba(var(--color-foreground-rgb), 0.05);
  }

  .header__nav-mobile {
    display: none;
  }

  /* Responsive Styles */
  @media screen and (max-width: 990px) {
    .header__top-row {
      grid-template-columns: auto 1fr auto;
      padding: 0.8rem 0;
    }

    .header__search {
      display: none; /* Hide on mobile top row, move to drawer */
    }

    .header__mobile-toggle {
      display: flex;
      margin-right: 0.5rem;
      grid-column: 1;
    }

    .header__logo {
      grid-column: 2;
      justify-self: center;
    }

    .header__icons {
      grid-column: 3;
    }

    .header__bottom-row {
      display: none;
    }

    .header__nav-mobile {
      position: fixed;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100vh;
      background: var(--color-background);
      z-index: 100;
      transition: left 0.3s ease;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .header__nav-mobile--open {
      left: 0;
    }

    .header__nav-mobile-close {
      align-self: flex-end;
      background: none;
      border: none;
      cursor: pointer;
    }

    .header__menu-list-mobile {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      list-style: none;
      padding: 0;
    }
    
    .header__logo {
        grid-column: 2;
    }
  }
</style>

<div class="header-wrapper color-{{ color_scheme }}{% if sticky %} header-wrapper--sticky{% endif %}">
  <div class="header-container">
    
    <!-- Top Row -->
    <div class="header__top-row">
      
      <!-- Mobile Toggle -->
      <button type="button" class="header__mobile-toggle" aria-label="Menu" id="mobile-menu-toggle">
        <span class="svg-wrapper" style="width: 32px; height: 32px;">
          {{ 'icon-menu.svg' | inline_asset_content }}
        </span>
      </button>

      <!-- Logo (Left on Desktop, Center on Mobile) -->
      <div class="header__logo">
        <a href="{{ routes.root_url }}" class="header__logo-link">
          {%- if logo != blank -%}
             <div class="header__logo-text">
                <div class="header__logo-box">fx</div>
                <span>studio</span>
             </div>
          {%- else -%}
            <div class="header__logo-text">
                <div class="header__logo-box">fx</div>
                <span>studio</span>
            </div>
          {%- endif -%}
        </a>
      </div>

      <!-- Search (Desktop Center) -->
      <div class="header__search">
        <form action="{{ routes.search_url }}" method="get" class="header__search-form">
          <span class="header__search-icon">
            {{ 'icon-search.svg' | inline_asset_content }}
          </span>
          <input type="text" name="q" placeholder="Search" class="header__search-input" aria-label="Search">
        </form>
      </div>

      <!-- Icons -->
      <div class="header__icons">
        {%- if shop.customer_accounts_enabled and show_account -%}
          <a href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}" class="header__icon-link" aria-label="Account">
            <span class="header__icon-svg">
              {{ 'icon-account.svg' | inline_asset_content }}
            </span>
          </a>
        {%- endif -%}
        <a href="{{ routes.cart_url }}" class="header__icon-link" aria-label="Cart">
          <span class="header__icon-svg">
            {{ 'icon-cart.svg' | inline_asset_content }}
          </span>
        </a>
      </div>

    </div>

    <!-- Bottom Row (Desktop Navigation) -->
    <div class="header__bottom-row">
      <nav class="header__nav">
        <ul class="header__menu-list">
          {%- for link in linklists[menu].links -%}
            <li class="header__menu-item">
              <a href="{{ link.url }}" class="header__menu-link">
                {{ link.title | escape }}
                {%- if link.links.size > 0 -%}
                  <span style="width: 10px; height: 10px;">{{ 'icon-caret.svg' | inline_asset_content }}</span>
                {%- endif -%}
              </a>
              {%- if link.title contains 'Sale' or link.title contains 'sale' -%}
                <span class="header__sale-badge">Sale</span>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    </div>

  </div>
</div>

<!-- Mobile Navigation Drawer -->
<div class="header__nav-mobile" id="mobile-nav-drawer">
  <button type="button" class="header__nav-mobile-close" id="mobile-menu-close" aria-label="Close menu">
    <span class="svg-wrapper" style="width: 24px; height: 24px;">{{ 'icon-close.svg' | inline_asset_content }}</span>
  </button>
  
  <form action="{{ routes.search_url }}" method="get" class="header__search-form">
    <input type="text" name="q" placeholder="Search" class="header__search-input" style="border: 1px solid var(--color-border);">
  </form>

  <ul class="header__menu-list-mobile">
    {%- for link in linklists[menu].links -%}
      <li>
        <a href="{{ link.url }}" class="header__menu-link" style="font-size: 1.2rem; padding: 0.5rem 0;">
          {{ link.title | escape }}
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const close = document.getElementById('mobile-menu-close');
    const drawer = document.getElementById('mobile-nav-drawer');

    if (toggle && drawer) {
      toggle.addEventListener('click', () => drawer.classList.add('header__nav-mobile--open'));
      close.addEventListener('click', () => drawer.classList.remove('header__nav-mobile--open'));
      
      // Close on escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') drawer.classList.remove('header__nav-mobile--open');
      });
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "section-header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 120,
      "unit": "px",
      "label": "Logo width"
    },
    {
      "type": "checkbox",
      "id": "sticky",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "Show account icon",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
