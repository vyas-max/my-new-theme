<div class="custom-footer section-{{ section.id }}" 
     style="--padding-top: {{ section.settings.padding_top }}px; 
            --padding-bottom: {{ section.settings.padding_bottom }}px;
            --background-color: {{ section.settings.background_color }};
            --text-color: {{ section.settings.text_color }};">
  
  <div class="footer-container">
    <div class="footer-main">
      {% comment %} Column 1: Logo and Copyright {% endcomment %}
      <div class="footer-col footer-col--brand">
        {% if section.settings.logo != blank %}
          <a href="/" class="footer-logo-link">
            {{ section.settings.logo | image_url: width: 200 | image_tag: class: 'footer-logo', loading: 'lazy' }}
          </a>
        {% else %}
          <span class="footer-logo-text">{{ shop.name }}</span>
        {% endif %}
        <p class="footer-copyright-main">
          &copy; {{ 'now' | date: "%Y" }} - All Rights Reserved.
        </p>
      </div>

      {% comment %} Column 2: Skin Fx Menu {% endcomment %}
      <div class="footer-col">
          <h3 class="footer-col-title">{{ section.settings.menu_1_heading }}</h3>
          <ul class="footer-menu list-unstyled">
            <li><a href="/">Home</a></li>
            <li><a href="#">Face Wash</a></li>
            <li><a href="#">Face Wipes</a></li>
            <li><a href="#">Foot Care</a></li>
            <li><a href="#">Hand Care</a></li>
            <li><a href="#">Sunscreen</a></li>
          </ul>
      </div>

      {% comment %} Column 3: Color Fx Menu {% endcomment %}
      <div class="footer-col">
          <h3 class="footer-col-title">{{ section.settings.menu_2_heading }}</h3>
          <ul class="footer-menu list-unstyled">
            <li><a href="/">Home</a></li>
            <li><a href="#">Nail Polish</a></li>
            <li><a href="#">Nail Polish Remover</a></li>
            <li><a href="#">Nail Polish Combo</a></li>
            <li><a href="#">Nail Care</a></li>
            <li><a href="#">Makeup Remover Wipes</a></li>
          </ul>
      </div>

      {% comment %} Column 4: Company Menu {% endcomment %}
      <div class="footer-col">
          <h3 class="footer-col-title">{{ section.settings.menu_3_heading }}</h3>
          <ul class="footer-menu list-unstyled">
            <li><a href="#">Careers</a></li>
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Terms and Conditions</a></li>
            <li><a href="#">Cancellation and Return Policy</a></li>
            <li><a href="#">Shipping Process</a></li>
          </ul>
      </div>

      {% comment %} Column 5: Address {% endcomment %}
      <div class="footer-col footer-col--address">
        <h3 class="footer-col-title">{{ section.settings.address_heading }}</h3>
        <div class="footer-address-content">
          {{ section.settings.address_text }}
        </div>
      </div>
    </div>

    <div class="footer-bottom-bar">
      <div class="footer-bottom-content">
        <p class="footer-copyright-bottom">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name | downcase }}
        </p>
        <nav class="footer-bottom-links">
          {% if section.settings.privacy_link != blank %}
            <a href="{{ section.settings.privacy_link }}">Privacy policy</a>
          {% endif %}
        </nav>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-footer {
    padding-top: var(--padding-top);
    padding-bottom: var(--padding-bottom);
    background-color: var(--background-color);
    color: var(--text-color);
    border-top: 1px solid #e0e0e0;
    font-size: 1.1rem;
  }

  .footer-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 4rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
    padding-bottom: 1rem;
  }

  .footer-col-title {
    font-size: 1.15rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
    color: #000;
  }

  .footer-logo {
    max-width: 60px;
    height: auto;
    margin-bottom: 0.4rem;
  }

  .footer-logo-text {
    font-size: 1.6rem;
    font-weight: 700;
    display: block;
    margin-bottom: 1rem;
  }

  .footer-copyright-main {
    font-size: 1.2rem;
    color: #888;
    margin: 0;
  }

  .footer-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-menu li {
    margin-bottom: 0.2rem;
  }

  .footer-menu a {
    text-decoration: none;
    color: #444;
    transition: color 0.2s ease;
  }

  .footer-menu a:hover {
    color: #000;
  }

  .footer-address-content {
    color: #444;
    line-height: 1.8;
  }

  .footer-address-content p {
    margin: 0 0 0.3rem 0;
  }

  .footer-bottom-bar {
    border-top: 1px solid #e0e0e0;
    padding-top: 1rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: flex-start;
    gap: 3rem;
    align-items: center;
    font-size: 1.2rem;
    color: #888;
  }

  .footer-bottom-links a {
    color: #888;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-bottom-links a:hover {
    color: #000;
  }

  @media screen and (max-width: 1200px) {
    .footer-main {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 750px) {
    .footer-container {
      padding: 0 2rem;
    }
    
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding-bottom: 4rem;
    }

    .footer-col-title {
      margin-bottom: 1.5rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Footer",
  "tag": "footer",
  "class": "custom-footer-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "header",
      "content": "Menu 1"
    },
    {
      "type": "text",
      "id": "menu_1_heading",
      "label": "Heading",
      "default": "Skin Fx"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Select Menu"
    },
    {
      "type": "header",
      "content": "Menu 2"
    },
    {
      "type": "text",
      "id": "menu_2_heading",
      "label": "Heading",
      "default": "Color Fx"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Select Menu"
    },
    {
      "type": "header",
      "content": "Menu 3"
    },
    {
      "type": "text",
      "id": "menu_3_heading",
      "label": "Heading",
      "default": "Company"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Select Menu"
    },
    {
      "type": "header",
      "content": "Address"
    },
    {
      "type": "text",
      "id": "address_heading",
      "label": "Heading",
      "default": "Address"
    },
    {
      "type": "richtext",
      "id": "address_text",
      "label": "Address Content",
      "default": "<p>Felisha Cosmetics Private Limited, 1/1, behind Cinemax, 5, opp. Prabhodhan Ground, Siddharth Nagar, Goregaon West, Mumbai, Maharashtra 400104</p><p>ecom@felisha.in</p>"
    },
    {
      "type": "url",
      "id": "privacy_link",
      "label": "Privacy Policy Link"
    },
    {
      "type": "header",
      "content": "Colors & Spacing"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Custom Footer"
    }
  ]
}
{% endschema %}
