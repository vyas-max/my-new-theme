<div class="top-shelf section-{{ section.id }} color-{{ section.settings.color_scheme }}" 
     style="--padding-top: {{ section.settings.padding_top }}px; 
            --padding-bottom: {{ section.settings.padding_bottom }}px;
            --max-width: {{ section.settings.max_width }}px;">
  
  <div class="top-shelf__container">
    {% if section.settings.heading != blank %}
      <h2 class="top-shelf__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="top-shelf__tabs">
      {% for block in section.blocks %}
        {% if block.type == 'collection' %}
          <button class="top-shelf__tab {% if forloop.first %}tab--active{% endif %}" 
                  data-tab="tab-{{ block.id }}" 
                  {{ block.shopify_attributes }}>
            {{ block.settings.title | default: block.settings.collection.title }}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="top-shelf__content">
      {% for block in section.blocks %}
        {% if block.type == 'collection' %}
          <div class="top-shelf__grid {% if forloop.first %}grid--active{% endif %}" id="tab-{{ block.id }}">
            {% assign collection = block.settings.collection %}
            {% if collection != blank %}
              {% for product in collection.products limit: section.settings.products_to_show %}
                <div class="top-shelf__item">
                  <a href="{{ product.url }}" class="top-shelf__card">
                    <div class="top-shelf__image-wrapper">
                      {% if product.featured_image != blank %}
                        <img src="{{ product.featured_image | image_url: width: 600 }}" 
                             alt="{{ product.title }}"
                             loading="lazy"
                             width="600"
                             height="600"
                             class="top-shelf__image">
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg top-shelf__image' }}
                      {% endif %}
                    </div>
                    <div class="top-shelf__info">
                      <h3 class="top-shelf__product-title">{{ product.title }}</h3>
                      <div class="top-shelf__price-wrapper">
                        {% if product.compare_at_price > product.price %}
                          <span class="top-shelf__price-old">{{ product.compare_at_price | money }}</span>
                          <span class="top-shelf__price-current">{{ product.price | money }}</span>
                          {% assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round %}
                          <span class="top-shelf__discount">{{ discount }}% OFF</span>
                        {% else %}
                          <span class="top-shelf__price-current">{{ product.price | money }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </a>
                </div>
              {% endfor %}
            {% else %}
              {% for i in (1..4) %}
                <div class="top-shelf__item">
                  <div class="top-shelf__card">
                    <div class="top-shelf__image-wrapper">
                      {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg top-shelf__image' }}
                    </div>
                    <div class="top-shelf__info">
                      <h3 class="top-shelf__product-title">Sample Product</h3>
                      <div class="top-shelf__price-wrapper">
                        <span class="top-shelf__price-old">Rs. 99.00</span>
                        <span class="top-shelf__price-current">Rs. 79.00</span>
                        <span class="top-shelf__discount">20% OFF</span>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .top-shelf {
    padding-top: var(--padding-top);
    padding-bottom: var(--padding-bottom);
    background-color: #fbfbfb; /* Subtle background as seen in image */
  }

  .top-shelf__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
  }

  .top-shelf__heading {
    font-size: 3.2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: #121212;
  }

  .top-shelf__tabs {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 3.5rem;
    flex-wrap: wrap;
  }

  .top-shelf__tab {
    background: none;
    border: none;
    padding: 8px 18px;
    font-size: 1.4rem;
    font-weight: 500;
    color: #666;
    cursor: pointer;
    border-radius: 100px;
    transition: all 0.3s ease;
  }

  .top-shelf__tab.tab--active {
    background: #000;
    color: #fff;
  }

  .top-shelf__grid {
    display: none;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .top-shelf__grid.grid--active {
    display: grid;
    animation: fadeIn 0.4s ease forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media screen and (min-width: 750px) {
    .top-shelf__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .top-shelf__card {
    display: block;
    text-decoration: none;
    text-align: left;
    height: 100%;
  }

  .top-shelf__image-wrapper {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.2rem;
    position: relative;
    padding-bottom: 100%; /* Square ratio */
  }

  .top-shelf__image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .top-shelf__card:hover .top-shelf__image {
    transform: translate(-50%, -50%) scale(1.05);
  }

  .top-shelf__info {
    padding: 0 0.5rem;
  }

  .top-shelf__product-title {
    font-size: 1.3rem;
    font-weight: 500;
    margin: 0 0 0.6rem 0;
    color: #333;
    line-height: 1.2;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .top-shelf__price-wrapper {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }

  .top-shelf__price-old {
    text-decoration: line-through;
    color: #999;
    font-size: 1.1rem;
  }

  .top-shelf__price-current {
    font-weight: 600;
    color: #000;
    font-size: 1.3rem;
  }

  .top-shelf__discount {
    color: #e53935; /* Red as seen in image */
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
  }
</style>

<script>
  (function() {
    const section = document.querySelector('.section-{{ section.id }}');
    if (!section) return;

    const tabs = section.querySelectorAll('.top-shelf__tab');
    const grids = section.querySelectorAll('.top-shelf__grid');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Remove active classes
        tabs.forEach(t => t.classList.remove('tab--active'));
        grids.forEach(g => g.classList.remove('grid--active'));

        // Add active classes
        tab.classList.add('tab--active');
        const targetGrid = section.querySelector('#' + tab.dataset.tab);
        if (targetGrid) targetGrid.classList.add('grid--active');
      });
    });
  })();
</script>

{% schema %}
{
  "name": "Our Top Shelf",
  "tag": "section",
  "class": "our-top-shelf-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Top Shelf"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products per tab",
      "min": 4,
      "max": 12,
      "step": 4,
      "default": 4
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Tab",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab Label (Override)"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Top Shelf",
      "blocks": [
        { "type": "collection", "settings": { "title": "Best Seller" } },
        { "type": "collection", "settings": { "title": "Masks" } },
        { "type": "collection", "settings": { "title": "Nail Care" } }
      ]
    }
  ]
}
{% endschema %}
