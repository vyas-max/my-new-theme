<div class="shop-by-category section-{{ section.id }} color-{{ section.settings.color_scheme }}" 
     style="--padding-top: {{ section.settings.padding_top }}px; 
            --padding-bottom: {{ section.settings.padding_bottom }}px;
            --max-width: {{ section.settings.max_width }}px;
            --card-gap: {{ section.settings.card_gap_desktop }}px;
            --card-gap-mobile: {{ section.settings.card_gap_mobile }}px;
            --card-radius: {{ section.settings.card_radius }}px;
            --aspect-ratio: {{ section.settings.aspect_ratio | default: '125' }}%;
            --heading-size: {{ section.settings.heading_size }}px;
            --title-size: {{ section.settings.title_size }}px;
            --cta-size: {{ section.settings.cta_size }}px;
            --gradient-opacity: {{ section.settings.gradient_opacity | divided_by: 100.0 }};">
  
  <div class="shop-by-category__container">
    {% if section.settings.heading != blank %}
      <h2 class="shop-by-category__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="shop-by-category__grid">
      {% for block in section.blocks %}
        {% liquid
          assign collection = block.settings.collection
          assign category_image = block.settings.image | default: collection.featured_image
          assign title = block.settings.title | default: collection.title | default: 'Category'
        %}
        <div class="shop-by-category__item" {{ block.shopify_attributes }}>
          <a href="{{ collection.url | default: '#' }}" class="shop-by-category__card">
            <div class="shop-by-category__image-wrapper">
              {% if category_image != blank %}
                {{ category_image | image_url: width: 800 | image_tag:
                  loading: 'lazy',
                  class: 'shop-by-category__image',
                  widths: '200, 400, 600, 800'
                }}
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg shop-by-category__image' }}
              {% endif %}
              
              <div class="shop-by-category__overlay">
                <div class="shop-by-category__content px-studio-style">
                  <h3 class="shop-by-category__title">{{ title }}</h3>
                  <span class="shop-by-category__cta">{{ block.settings.cta_text }}</span>
                </div>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .shop-by-category {
    padding-top: var(--padding-top);
    padding-bottom: var(--padding-bottom);
    background-color: transparent;
  }

  .shop-by-category__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .shop-by-category__heading {
    margin: 0 0 2rem 0;
    font-size: var(--heading-size);
    font-weight: 600;
    color: var(--color-foreground);
    text-align: left;
    letter-spacing: -0.5px;
    font-family: inherit;
  }

  .shop-by-category__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--card-gap-mobile);
  }

  @media screen and (min-width: 600px) {
    .shop-by-category__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .shop-by-category__grid {
      grid-template-columns: repeat(5, 1fr);
      gap: var(--card-gap);
    }
  }

  .shop-by-category__card {
    display: block;
    text-decoration: none;
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    background-color: #f0f0f0;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .shop-by-category__card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.12);
  }

  .shop-by-category__image-wrapper {
    position: relative;
    padding-bottom: var(--aspect-ratio);
  }

  .shop-by-category__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .shop-by-category__card:hover .shop-by-category__image {
    transform: scale(1.1);
  }

  .shop-by-category__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, var(--gradient-opacity)) 0%, rgba(0, 0, 0, 0) 50%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .shop-by-category__content {
    color: #ffffff;
    text-align: left;
    width: 100%;
  }

  .shop-by-category__title {
    font-size: var(--title-size);
    font-weight: 700;
    margin: 0 0 0.3rem 0;
    color: #ffffff;
    line-height: 1.1;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }

  .shop-by-category__cta {
    font-size: var(--cta-size);
    font-weight: 600;
    color: #ffffff;
    text-transform: none;
    text-decoration: none;
    border-bottom: 2px solid #ffffff;
    padding-bottom: 2px;
    display: inline-block;
    transition: all 0.3s ease;
    opacity: 0.9;
  }

  .shop-by-category__card:hover .shop-by-category__cta {
    opacity: 1;
    border-color: rgba(255,255,255,0.7);
  }
</style>

{% schema %}
{
  "name": "Shop by Category",
  "tag": "section",
  "class": "shop-by-category-section",
  "settings": [
    {
      "type": "header",
      "content": "Visual Identity"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by category"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "header",
      "content": "Layout Controls"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Section Max Width",
      "min": 800,
      "max": 1800,
      "step": 50,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "header",
      "content": "Card Styling"
    },
    {
      "type": "range",
      "id": "card_gap_desktop",
      "label": "Gap between cards (Desktop)",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "card_gap_mobile",
      "label": "Gap between cards (Mobile)",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "card_radius",
      "label": "Card Corner Radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 16
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Card Proportions (Height)",
      "options": [
        { "value": "100", "label": "Square (1:1)" },
        { "value": "125", "label": "Portrait (4:5)" },
        { "value": "133", "label": "Portrait (3:4)" },
        { "value": "150", "label": "Tall (2:3)" }
      ],
      "default": "125"
    },
    {
      "type": "header",
      "content": "Typography & Overlays"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Font Size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "cta_size",
      "label": "Shop Now Font Size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "gradient_opacity",
      "label": "Overlay Gradient Strength",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 70
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Section Theme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Target Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Card Image (Override)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Card Title (Override)"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button Label",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Category (Studio UI)",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}
