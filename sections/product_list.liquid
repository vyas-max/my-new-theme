<div class="shop-by-category section-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="shop-by-category__container">
    {% if section.settings.heading != blank %}
      <h2 class="shop-by-category__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="shop-by-category__grid">
      {% for block in section.blocks %}
        {% liquid
          assign collection = block.settings.collection
          assign category_image = block.settings.image | default: collection.featured_image
          assign title = block.settings.title | default: collection.title | default: 'Category'
        %}
        <div class="shop-by-category__item" {{ block.shopify_attributes }}>
          <a href="{{ collection.url | default: '#' }}" class="shop-by-category__card">
            <div class="shop-by-category__image-wrapper">
              {% if category_image != blank %}
                {{ category_image | image_url: width: 800 | image_tag:
                  loading: 'lazy',
                  class: 'shop-by-category__image',
                  widths: '200, 400, 600, 800'
                }}
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg shop-by-category__image' }}
              {% endif %}
              
              <div class="shop-by-category__overlay">
                <div class="shop-by-category__content">
                  <h3 class="shop-by-category__title">{{ title }}</h3>
                  <span class="shop-by-category__cta">{{ block.settings.cta_text }}</span>
                </div>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .shop-by-category {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: transparent;
  }

  .shop-by-category__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .shop-by-category__heading {
    margin: 0 0 2rem 0;
    font-size: 2.4rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-align: left;
  }

  .shop-by-category__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.2rem;
  }

  @media screen and (min-width: 750px) {
    .shop-by-category__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  @media screen and (min-width: 990px) {
    .shop-by-category__grid {
      grid-template-columns: repeat(5, 1fr);
      gap: 1rem;
    }
  }

  .shop-by-category__card {
    display: block;
    text-decoration: none;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background-color: #f5f5f5;
    transition: transform 0.3s ease;
  }

  .shop-by-category__card:hover {
    transform: translateY(-4px);
  }

  .shop-by-category__image-wrapper {
    position: relative;
    padding-bottom: 120%; /* Slightly portrait aspect ratio */
  }

  .shop-by-category__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .shop-by-category__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 40%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .shop-by-category__content {
    color: #ffffff;
    text-align: left;
  }

  .shop-by-category__title {
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: #ffffff;
    line-height: 1.2;
  }

  .shop-by-category__cta {
    font-size: 1.1rem;
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 3px;
    opacity: 0.95;
  }

  .shop-by-category__card:hover .shop-by-category__cta {
    opacity: 1;
  }
</style>

{% schema %}
{
  "name": "Shop by Category",
  "tag": "section",
  "class": "shop-by-category-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by category"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "min": 800,
      "max": 1800,
      "step": 50,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image (Optional)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title (Optional)"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Category",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

