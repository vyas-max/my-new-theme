<div class="shop-by-category section-{{ section.id }}">
  <div class="shop-by-category__container">
    {% if section.settings.heading != blank %}
      <h2 class="shop-by-category__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="shop-by-category__cards">
      {% for block in section.blocks %}
        {% assign collection = block.settings.collection %}
        <a href="{{ collection.url }}" class="shop-by-category__card" {{ block.shopify_attributes }}>
          <div class="shop-by-category__image-wrapper">
            {% if collection.image %}
              <img
                src="{{ collection.image | image_url: width: 600 }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
                class="shop-by-category__image"
              >
            {% elsif collection.products.first.featured_image %}
              <img
                src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
                class="shop-by-category__image"
              >
            {% else %}
              <div class="shop-by-category__placeholder">
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
            <div class="shop-by-category__overlay">
              <h3 class="shop-by-category__title">{{ collection.title | default: 'Category' }}</h3>
              <span class="shop-by-category__cta">{{ block.settings.cta_text }}</span>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .shop-by-category {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  .shop-by-category__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  .shop-by-category__heading {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 600;
    color: var(--color-foreground);
  }

  .shop-by-category__cards {
    display: flex;
    gap: {{ section.settings.card_gap }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 10px;
  }

  .shop-by-category__cards::-webkit-scrollbar {
    display: none;
  }

  .shop-by-category__card {
    flex: 0 0 auto;
    width: {{ section.settings.card_width }}px;
    scroll-snap-align: start;
    text-decoration: none;
    color: inherit;
  }

  .shop-by-category__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    background-color: rgba(var(--color-foreground-rgb), 0.04);
  }

  .shop-by-category__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .shop-by-category__card:hover .shop-by-category__image {
    transform: scale(1.05);
  }

  .shop-by-category__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--color-foreground-rgb), 0.04);
  }

  .shop-by-category__placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .shop-by-category__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ section.settings.overlay_padding }}px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .shop-by-category__title {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    line-height: 1.2;
  }

  .shop-by-category__cta {
    font-size: {{ section.settings.cta_size }}px;
    font-weight: 500;
    color: #ffffff;
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }

  .shop-by-category__card:hover .shop-by-category__cta {
    opacity: 1;
  }

  @media screen and (max-width: 749px) {
    .shop-by-category__card {
      width: {{ section.settings.card_width_mobile }}px;
    }

    .shop-by-category__heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    .shop-by-category__title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .shop-by-category__cards {
      overflow-x: visible;
      flex-wrap: wrap;
      justify-content: {{ section.settings.alignment }};
    }
  }
</style>

