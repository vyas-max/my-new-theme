<div class="testimonial-section section-{{ section.id }}" 
     style="--padding-top: {{ section.settings.padding_top }}px; 
            --padding-bottom: {{ section.settings.padding_bottom }}px;">
  
  <div class="testimonial-container">
    {% if section.settings.heading != blank %}
      <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="testimonial-grid">
      <div class="testimonial-image-col">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'testimonial-main-image', loading: 'lazy' }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="testimonial-list-col">
        <div class="testimonial-scroll-area">
          {% for block in section.blocks %}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="testimonial-content">
                <p class="testimonial-quote">"{{ block.settings.quote }}"</p>
                <div class="testimonial-meta">
                  <h4 class="testimonial-author">{{ block.settings.author }}</h4>
                  <span class="testimonial-source">{{ block.settings.source }}</span>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .testimonial-section {
    padding-top: var(--padding-top);
    padding-bottom: var(--padding-bottom);
    background-color: #f7f7f7;
    overflow: hidden;
  }

  .testimonial-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 4rem;
  }

  .testimonial-heading {
    text-align: center;
    font-size: 3.6rem;
    font-weight: 500;
    margin-bottom: 5rem;
    color: #000;
    font-family: inherit;
  }

  .testimonial-grid {
    display: flex;
    gap: 4rem;
    align-items: flex-start;
  }

  .testimonial-image-col, 
  .testimonial-list-col {
    flex: 1;
    width: 50%;
  }

  .testimonial-main-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    display: block;
    object-fit: cover;
    aspect-ratio: 1/1;
  }

  .testimonial-scroll-area {
    max-height: 500px; /* Adjust height as needed */
    overflow-y: auto;
    padding-right: 1.5rem;
  }

  /* Custom Scrollbar */
  .testimonial-scroll-area::-webkit-scrollbar {
    width: 6px;
  }

  .testimonial-scroll-area::-webkit-scrollbar-track {
    background: #eee;
    border-radius: 10px;
  }

  .testimonial-scroll-area::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 10px;
  }

  .testimonial-scroll-area::-webkit-scrollbar-thumb:hover {
    background: #aaa;
  }

  .testimonial-card {
    background: #fff;
    border-radius: 12px;
    padding: 2.5rem;
    margin-bottom: 2rem;
    border: 1px solid #e0e0e0;
    transition: box-shadow 0.3s ease;
  }

  .testimonial-card:last-child {
    margin-bottom: 0;
  }

  .testimonial-card:hover {
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
  }

  .testimonial-quote {
    font-size: 1.5rem;
    line-height: 1.6;
    color: #333;
    margin: 0 0 2rem 0;
    font-style: italic;
  }

  .testimonial-meta {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .testimonial-author {
    font-size: 1.6rem;
    font-weight: 700;
    margin: 0;
    color: #000;
  }

  .testimonial-source {
    font-size: 1.2rem;
    color: #888;
    text-transform: capitalize;
  }

  @media screen and (max-width: 750px) {
    .testimonial-container {
      padding: 0 2rem;
    }
    
    .testimonial-grid {
      flex-direction: column;
      gap: 3rem;
    }
    
    .testimonial-image-col, 
    .testimonial-list-col {
      width: 100%;
    }

    .testimonial-heading {
      font-size: 2.8rem;
      margin-bottom: 3rem;
    }

    .testimonial-scroll-area {
      max-height: none;
      padding-right: 0;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Testimonials",
  "tag": "section",
  "class": "custom-testimonial-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our customers say"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Amazing product, does the job it says it will. Highly recommended!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "Customer Name"
        },
        {
          "type": "text",
          "id": "source",
          "label": "Source (e.g. Amazon Customer)",
          "default": "Verified Buyer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
